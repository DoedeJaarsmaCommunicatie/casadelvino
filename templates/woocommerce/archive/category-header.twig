{% if "header_img" in acf|keys %}
<style>
    .category-header-bg {
        background-image: url({{ Image(acf.header_img).src }});
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        height: 500px;
    }
</style>
{% endif %}
<header class="category-header-bg d-flex">
    <div class="container d-flex align-items-center">
        {% if "header_color" in acf|keys %}
        <style>
            .acf-color {
                color: {{ acf.header_color }} !important;
            }
        </style>
        {% endif %}
        <h1 class="font-playfair text-white acf-color">
            {% if "header_title" in acf|keys %}
                {{ acf.header_title }}
            {% else %}
                {{ category.name }}
            {% endif %}
        </h1>
    </div>
</header>
<section class="container">
    <div class="row my-2">
        <div class="col-md-10 offset-md-2 d-flex justify-content-between">
            {{ category.description }}
        </div>
    </div>
</section>
