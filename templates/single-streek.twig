{% extends 'templates/layouts/base.twig' %}

{% block content %}
    <main class="container mt-md-5">
        <div class="row">
            <div class="col-md-8">
                {{ post.content }}
            </div>
            <div class="col-md-4">
                <figure>
                    <img src="{{ Image(post.meta('pa_streek').meta('afbeelding')).src }}" alt="{{ post.title }}">
                </figure>
            </div>
        </div>
        <div class="row">
            {% set _products = fetchProductsFromTerm(post.meta('pa_streek').slug, post.meta('pa_streek').taxonomy, -1) %}

            {% for product in _products %}
                <div class="col-md-3">
                    {% include 'templates/woocommerce/partials/tease-product.twig' with { post: product, product: fn('wc_get_product', product.ID) } %}
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
