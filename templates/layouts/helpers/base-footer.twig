<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
<script>
	WebFont.load({
		google: {
			families: [
                'Open Sans:300,400,700',
                'Playfair Display:400,700,900'
            ]
		}
	});
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/TarekRaafat/autoComplete.js@3.2.2/dist/css/autoComplete.min.css" type="text/css" media="all" defer>
<link rel="stylesheet" href="{{ site.theme.link }}/dist/styles/cdv.css" type="text/css" media="all">

<script>
	window.addEventListener("load", () => {
		const hidden = document.querySelectorAll('.hide-until-load');

		for ( let i = 0; i < hidden.length; i++ ) {
			const el = hidden[i];

			el.style.display = '';
			el.style.opacity = '';
			el.style.visibility = '';
			el.classList.remove('hide-until-load');
		}
	})
</script>
