<td class="product-thumbnail text-center">
    {% if not _permalink %}
        {{ _product.get_image }}
    {% else %}
        <a href="{{ _permalink }}">
                <img src="{{ Image(_product.get_image_id).src }}" alt="{{ _product.name }}">
{#            {{ _product.get_image.src }}#}
        </a>
    {% endif %}
</td>
