{% do action('woocommerce_before_cart') %}

<form action="{{ fn('wc_get_cart_url') }}" method="POST">
    {% do action('woocommerce_before_cart_table') %}

    <table class="cart_table_responsive">
        <thead>
            <tr>
                <th class="product-remove">&nbsp;</th>
                <th class="product-thumbnail">&nbsp;</th>
                <th class="product-name">{{ 'Product'|e }}</th>
                <th class="product-price">{{ 'Prijs'|e }}</th>
                <th class="product-quantity">{{ 'Aantal'|e }}</th>
                <th class="product-subtotal">{{ 'Totaal'|e }}</th>
            </tr>
        </thead>
        <tbody>
        {% do action('woocommerce_before_cart_contents') %}
        {% for key, item in cart %}
            {% set _product = item['data']|apply_filters('woocommerce_cart_item_product', item['data'], item, key) %}
            {% set id = item['data']|apply_filters('woocommerce_cart_item_product_id', item['product_id'], item, key) %}

            {% if _product and _product.exists and item['quantity'] > 0 %}
                {% set _permalink = _product.get_permalink %}
                <tr>
                    <td class="product-remove">
                        <a href="{{ fn('wc_get_cart_remove_url', key) }}" class="remove" aria-label="{{ __('Remove this item', 'woocommerce') }}" data-product_id="{{ _product.id }}" data-product_sku="{{ product.sku }}">
                            &times;
                        </a>
                    </td>
                    <td class="product-thumbnail">
                        {% if not _permalink %}
                            {{ _product.get_image }}
                        {% else %}
                            <a href="{{ _permalink }}">
                                {{ _product.get_image }}
                            </a>
                        {% endif %}
                    </td>
                    <td class="product-name">
                        {% do action('cdv_before_cart_product_name', item, key) %}
                        {% if not _permalink %}
                            {{ _product.get_name }}
                        {% else %}
                            <a href="{{ _permalink }}">
                                {{ _product.get_name }}
                            </a>
                        {% endif %}
                        {% do action('cdv_after_cart_product_name', item, key) %}
                    </td>
                    <td class="product-price">
                        &euro; {{ _product.get_price| number_format(2, ',', '.') }}
                    </td>
                    <td class="product-quantity">
                        {{ cart_quantity_input(_product, item, key) }}
                    </td>
                    <td class="product-subtotal">
                        {{ cart_product_subtotal(_product, item['quantity']) }}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        {% do action('woocommerce_cart_contents') %}
        <tr>
            <td colspan="6" class="actions">
                {% if fn('wc_coupons_enabled') %}
                    <div class="coupon">
                        <label for="coupon_code">{{ __('Coupon:', 'woocommerce') }}</label>
                        <input type="text" name="coupon_code" class="input-text" id="coupon_code" value="" placeholder="{{ __('Coupon code', 'woocommerce') }}" />
                        <button type="submit" class="button" name="apply_coupon" value="{{ __('Apply coupon', 'woocommerce') }}">
                            {{ __('Apply coupon', 'woocommerce') }}
                        </button>
                        {% do action('woocommerce_cart_coupon') %}
                    </div>
                {% endif %}

                <button type="submit" class="button" name="update_cart" value="{{ __('Update cart', 'woocommerce') }}">
                    {{ __('Update cart', 'woocommerce') }}
                </button>

                {% do action('woocommerce_car_actions') %}
                {{ fn('wp_nonce_field', 'woocommerce-cart', 'woocommerce-cart-nonce', true, false) }}
            </td>
        </tr>

        {% do action('woocommerce_after_cart_contents') %}
        </tbody>
    </table>

    {% do action('woocommerce_after_cart_table') %}
</form>

<div class="cart-collaterals">
{#
    /**
    * Cart collaterals hook.
    *
    * @hooked woocommerce_cross_sell_display
    * @hooked woocommerce_cart_totals - 10
    */
#}
    {% do action('woocommerce_cart_collaterals') %}
</div>

{% do action('woocommerce_after_cart') %}
