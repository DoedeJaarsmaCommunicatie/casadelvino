<section class="d-flex d-md-none justify-content-end w-100" id="nav-mobile">
    <span aria-controls="#mobile-navigation" class="mobile-navigation-button" data-action="toggleMobileMenu">
        <i class="fas fa-bars fa-2x color-primary-dark-40"></i>
    </span>
    <nav id="mobile-navigation" class="mobile-menu-fixed" aria-expanded="false">
        {% for item in menu.items %}
            <div class="mobile-parent-nav-item position-relative px-2 py-1">
                <a href="{{ item.link }}" class="mobile-nav-main-item {{ item.classes|join(' ') }}">
                    {{ item.title }}
                </a>
            </div>
        {% endfor %}
        <hr class="mx-1">
        {% for item in mobileSubmenu.items %}
            <div class="mobile-parent-nav-item position-relative px-2 py-1">
                <a href="{{ item.link }}" class="mobile-nav-sub-item {{ item.classes|join(' ') }}">
                    {{ item.title }}
                </a>
            </div>
        {% endfor %}
    </nav>
</section>

