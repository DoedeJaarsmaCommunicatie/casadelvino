{% if "header_color" in acf|keys %}
    <style>
        .acf-color {
            color: {{ acf.header_color }} !important;
        }
    </style>
{% endif %}
{% if "header_img" in acf|keys %}
<style>
    .category-header-bg {
        background-image: url({{ Image(acf.header_img).src }});
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        height: 500px;
    }
</style>
<header class="category-header-bg d-flex">
    <div class="container d-flex align-items-center">
        <h1 class="font-playfair text-white acf-color">
                {{ category.name }}
        </h1>
    </div>
</header>
{% endif %}

<section class="container">
    <div class="row my-2">
        <div class="col-md-10 offset-md-2 d-flex justify-content-between">
            {% if "header_title" in acf|keys %}
                <h1 class="font-playfair text-dark acf-color">
                    {{ acf.header_title }}
                </h1>
            {% endif %}
            {{ category.description }}
        </div>
    </div>
</section>
