<aside class="bg-grey col-md-3 py-2 px-3" id="product-sidebar_{{ post.ID }}">
    {% do action('cdv_before_single_product_price') %}
    <span class="price mb-3">
                    &euro; {{ product.get_price| number_format(2, ',', '.') }}
                </span>
    {% do action('cdv_after_single_product_price') %}

    {% do action('cdv_before_single_product_order') %}
    <add-to-cart :product-id="{{ post.ID }}" :is-expanded="true"></add-to-cart>
    {% do action('cdv_after_single_product_order') %}
    <p>
        Op werkdagen voor 15.00 uur besteld, morgen in huis

        Gratis verzending vanaf €50,-
        (België vanaf €100,-)

        Proefgarantie

        Ophalen in Amsterdam mogelijk

        Klanten beoordelen ons met een 9.5 / 10
    </p>
</aside>